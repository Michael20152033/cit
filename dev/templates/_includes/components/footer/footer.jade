									a(href="#").c-footer-menu__link Конфигуратор
								li.c-footer-menu__item
									a(href="#").c-footer-menu__link Подбор расходных материалов
								li.c-footer-menu__item
									a(href="#").c-footer-menu__link Ситилинк
								li.c-footer-menu__item
									a(href="#").c-footer-menu__link Новости
								li.c-footer-menu__item
